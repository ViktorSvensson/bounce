{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES6",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "rootDir": "src",
    "typeRoots": ["node_modules/@types", "index.d.ts"],
    "strict": true,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src/*", "src/**/*", "src/**/**/*"],
  "exclude": ["src/*.test.ts"]
}
